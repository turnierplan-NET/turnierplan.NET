root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true

[*.{ts,tsx,js,jsx,mjs}]
indent_size = 2
trim_trailing_whitespace = true
quote_type = single

[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.{csproj,proj,projitems,shproj,xml,json,html,scss,css,yml,yaml}]
indent_size = 2

[*.{cs}]
indent_size = 4