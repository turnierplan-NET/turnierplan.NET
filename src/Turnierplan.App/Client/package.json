{
  "name": "turnierplan-net",
  "version": "0.0.0",
  "description": "The client application of turnierplan.NET",
  "private": true,
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/turnierplan-NET/turnierplan.NET"
  },
  "scripts": {
    "ng": "ng",
    "gen:api": "ng-openapi-gen --input ../obj/Turnierplan.App_turnierplan.json --output src/app/api --endOfLineStyle lf --enumStyle pascal --promises false --apiService TurnierplanApi --functionIndex \"\" --modelIndex \"\" && replace-in-file \"PublicId = any\" \"PublicId = string\" src/app/api/**/*",
    "gen:tp": "node actions.gen.js",
    "build:prod": "npm run gen:api && npm run gen:tp && npm run ng -- build --configuration production",
    "start": "npm run gen:api && npm run gen:tp && npm run ng -- serve --port 45001",
    "prettier": "prettier \"**/*.*css\" \"**/*.*js\" \"**/*.ts\" \"**/*.json\" \"**/*.html\"",
    "lint": "npm run prettier -- --write",
    "lint:ci": "npm run prettier -- --check",
    "test": "ng test",
    "test:ci": "ng test --watch=false --source-map=true --code-coverage --browsers ChromeHeadless",
    "e2e:swap-environment": "replace-in-file \"environment.prod.ts\" \"environment.e2e.ts\" angular.json",
    "e2e:swap-environment-back": "replace-in-file \"environment.e2e.ts\" \"environment.prod.ts\" angular.json",
    "e2e:prepare": "npm run e2e:swap-environment && docker compose -f cypress/docker/docker-compose.yaml up --build -d && npm run e2e:swap-environment-back",
    "e2e:destroy": "docker compose -f cypress/docker/docker-compose.yaml down",
    "e2e:open": "npx cypress open",
    "e2e:run": "npx cypress run"
  },
  "dependencies": {
    "@angular/animations": "~20.3.2",
    "@angular/common": "~20.3.2",
    "@angular/compiler": "~20.3.2",
    "@angular/core": "~20.3.2",
    "@angular/forms": "~20.3.2",
    "@angular/localize": "~20.3.2",
    "@angular/platform-browser": "~20.3.2",
    "@angular/platform-browser-dynamic": "~20.3.2",
    "@angular/router": "~20.3.2",
    "@ng-bootstrap/ng-bootstrap": "~19.0.1",
    "@ngx-translate/core": "~17.0.0",
    "angularx-qrcode": "~20.0.0",
    "bootstrap": "~5.3.8",
    "bootstrap-icons": "~1.13.1",
    "core-js": "~3.45.1",
    "echarts": "~6.0.0",
    "jwt-decode": "~4.0.0",
    "ng2-pdfjs-viewer": "~25.0.9",
    "ngx-drag-drop": "~20.0.1",
    "ngx-echarts": "~20.0.2",
    "ngx-toastr": "~19.1.0",
    "rxjs": "~7.8.2",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "~20.3.3",
    "@angular/cli": "~20.3.3",
    "@angular/compiler-cli": "~20.3.2",
    "@types/jasmine": "~5.1.9",
    "@types/node": "~24.5.2",
    "cypress": "~15.3.0",
    "jasmine-core": "~5.11.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-openapi-gen": "~1.0.3",
    "prettier": "~3.6.2",
    "replace-in-file": "~8.3.0",
    "ts-node": "~10.9.2",
    "typescript": "~5.9.2"
  }
}
