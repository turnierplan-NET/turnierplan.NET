{
  "name": "turnierplan-net",
  "version": "0.0.0",
  "description": "The client application of turnierplan.NET",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/turnierplan-NET/turnierplan.NET"
  },
  "scripts": {
    "ng": "ng",
    "gen:api": "ng-openapi-gen --input ../obj/Turnierplan.App_turnierplan.json --output src/app/api --indexFile true --endOfLineStyle lf && replace-in-file \"PublicId = any\" \"PublicId = string\" src/app/api/**/*",
    "gen:tp": "node actions.gen.js",
    "build:prod": "npm run gen:api && npm run gen:tp && npm run ng -- build --configuration production",
    "start": "npm run gen:api && npm run gen:tp && npm run ng -- serve --port 45001",
    "prettier": "prettier \"**/*.*css\" \"**/*.*js\" \"**/*.ts\" \"**/*.json\" \"**/*.html\"",
    "lint": "npm run prettier -- --write",
    "lint:ci": "npm run prettier -- --check",
    "test": "ng test",
    "test:ci": "ng test --watch=false --source-map=true --code-coverage --browsers ChromeHeadless"
  },
  "dependencies": {
    "@angular/animations": "v19-lts",
    "@angular/common": "v19-lts",
    "@angular/compiler": "v19-lts",
    "@angular/core": "v19-lts",
    "@angular/forms": "v19-lts",
    "@angular/localize": "v19-lts",
    "@angular/platform-browser": "v19-lts",
    "@angular/platform-browser-dynamic": "v19-lts",
    "@angular/router": "v19-lts",
    "@ng-bootstrap/ng-bootstrap": "~18.0.0",
    "@ngx-translate/core": "~16.0.4",
    "angularx-qrcode": "~19.0.0",
    "bootstrap": "~5.3.7",
    "bootstrap-icons": "~1.13.1",
    "chart.js": "~4.5.0",
    "core-js": "~3.43.0",
    "jwt-decode": "~4.0.0",
    "ng2-charts": "~7.0.0",
    "ng2-pdfjs-viewer": "~19.0.0",
    "ngx-drag-drop": "~19.0.0",
    "ngx-toastr": "~19.0.0",
    "rxjs": "~7.8.2",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "v19-lts",
    "@angular/cli": "v19-lts",
    "@angular/compiler-cli": "v19-lts",
    "@types/jasmine": "~5.1.8",
    "@types/node": "~24.0.10",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-openapi-gen": "~0.53.0",
    "prettier": "~3.6.2",
    "replace-in-file": "~8.3.0",
    "ts-node": "~10.9.2",
    "typescript": "~5.8.3"
  }
}
